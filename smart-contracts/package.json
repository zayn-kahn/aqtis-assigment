{
  "name": "tgc-smart-contracts",
  "scripts": {
    "node": "npx hardhat node",
    "typechain": "npx hardhat typechain",
    "contract-size": "npx hardhat size-contracts",
    "test-all": "REPORT_GAS=true npx hardhat test --grep",
    "setup": "npx hardhat run scripts/setup.ts --network localhost",
    "deploy": "npx hardhat run scripts/1-deploy.ts --network localhost",
    "deploy-testnet": "npx hardhat run scripts/1-deploy.ts --network sepolia",
    "deploy-mainnet": "npx hardhat run scripts/1-deploy.ts --network mainnet",
    "coverage": "npx hardhat coverage --solcoverjs ./.solcover.js --testfiles ",
    "fork": "MAINNET_FORKING_ENABLED=true npx hardhat node --network hardhat"
  },
  "dependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.6",
    "@nomicfoundation/hardhat-toolbox": "^2.0.1",
    "@nomiclabs/hardhat-ethers": "^2.2.2",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@nomiclabs/hardhat-waffle": "^2.0.5",
    "@openzeppelin/contracts": "^4.8.1",
    "@typechain/hardhat": "^6.1.5",
    "chai": "^4.3.7",
    "dotenv": "^16.4.5",
    "ethers": "5.7.0",
    "hardhat": "^2.12.7",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-verify": "^1.0.0",
    "solidity-coverage": "^0.8.2"
  },
  "devDependencies": {
    "@typechain/ethers-v5": "^10.2.1",
    "@types/mocha": "^10.0.6",
    "hardhat-contract-sizer": "^2.10.0",
    "ts-node": "^10.9.1",
    "typechain": "^8.3.2",
    "typescript": "^4.9.5"
  }
}
